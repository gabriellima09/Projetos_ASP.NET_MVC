@model IEnumerable<LojaNet.Models.Cliente>

@{
    ViewBag.Title = "Clientes";
}

<h2>Clientes</h2>

<hr />

<div class="form-group">
    @Html.ActionLink("Novo", "Incluir", "Cliente", new { @class = "btn btn-primary" })
</div>

<div class="form-group">
    <table class="table table-bordered table-hover table-striped table-responsive">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Email</th>
                <th>Telefone</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var cliente in Model)
            {
                <tr>
                    <td>
                        @Html.ActionLink(cliente.nome, "Detalhes", "Cliente", new { id = cliente.id }, htmlAttributes: null)
                    </td>
                    <td>@cliente.email</td>
                    <td>@cliente.telefone</td>
                </tr>
            }
        </tbody>
    </table>
</div>