@{
    ViewBag.Title = "E-Sales - A sua loja online";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
        <li data-target="#myCarousel" data-slide-to="4"></li>
        <li data-target="#myCarousel" data-slide-to="5"></li>
        <li data-target="#myCarousel" data-slide-to="6"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        <!-- Masculino -->
        <div class="item active">
            <img src="~/Imagens/Masculino/Moletom.jpg" alt="Moletom" style="margin-left: 15%;width:225px;height:225px;">
            <div class="carousel-caption">
                <h3>Moletom</h3>
                <a class="link" href="~/Departamentos/Masculino" style="color:white">Confira a nova linha de inverno</a>
            </div>
        </div>
        <!-- Carro -->
        <div class="item">
            <img src="~/Imagens/Carro/LimpadorBanco.jpg" alt="Limpador de Banco" style="margin-left: 15%;width:225px;height:225px;">
            <div class="carousel-caption">
                <h3>Limpador de Banco</h3>
                <a class="link" href="~/Departamentos/Carro" style="color:white">Deixe seu banco novo em folha</a>
            </div>
        </div>
        <!-- Casa -->
        <div class="item">
            <img src="~/Imagens/Casa/Geladeira.jpg" alt="Geladeira" style="margin-left: 15%;width:225px;height:225px;">
            <div class="carousel-caption">
                <h3>Geladeira</h3>
                <a class="link" href="~/Departamentos/Casa" style="color:white">Tenha a mais nova geladeira na sua casa</a>
            </div>
        </div>
        <!-- Feminino -->
        <div class="item">
            <img src="~/Imagens/Feminino/Saia.jpg" alt="Saia" style="margin-left: 15%;width:225px;height:225px;">
            <div class="carousel-caption">
                <h3>Saia</h3>
                <a class="link" href="~/Departamentos/Feminino" style="color:white">Confira a nova linha de inverno</a>
            </div>
        </div>
        <!-- Infantil -->
        <div class="item">
            <img src="~/Imagens/Infantil/HotWheels.jpg" alt="Pista HotWheels" style="margin-left: 15%;width:225px;height:225px;">
            <div class="carousel-caption">
                <h3>Pista HotWheels</h3>
                <a class="link" href="~/Departamentos/Infantil" style="color:white">Compre já a nova pista da Hotwheels .. Vai encarar ?</a>
            </div>
        </div>
        <!-- Informática -->
        <div class="item">
            <img src="~/Imagens/Informatica/Computador.jpg" alt="Computador" style="margin-left: 15%;width:225px;height:225px;">
            <div class="carousel-caption">
                <h3>Computador</h3>
                <a class="link" href="~/Departamentos/Informatica" style="color:white">Venha ver a mais nova linha de PC's da loja</a>
            </div>
        </div>
        <!-- Livros -->
        <div class="item">
            <img src="~/Imagens/Livros/AsAventurasdePi.jpg" alt="As Aventuras de Pi" style="margin-left: 15%;width:225px;height:225px;">
            <div class="carousel-caption">
                <h3>As Aventuras de Pi</h3>
                <a class="link" href="~/Departamentos/Livros" style="color:white">Confira o nosso novo lançamento</a>
            </div>
        </div>
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<br />
<br />

<div id="divDeptos">
    @Html.Action("PV_Departamentos", "Departamentos")
</div>